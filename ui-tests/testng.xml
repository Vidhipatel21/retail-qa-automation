<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Retail QA Suite">

    <listeners>
        <listener class-name="utils.TestListener"/>
    </listeners>

    <test name="Smoke Tests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <packages>
            <package name="tests"/>
        </packages>
    </test>

</suite>
